<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.navigation.ui.home.HomeFragment">

    <ImageView
        android:id="@+id/cardHead"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/header_tantangan"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Destinasi Wisata"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardHead">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtPopularDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Destinasi terpopuler untuk kamu"
                android:textColor="#008C96"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPopularDestination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txtPopularDestination"
                app:layout_constraintTop_toBottomOf="@id/txtPopularDestination"
                tools:listitem="@layout/item_destinasi" />

            <TextView
                android:id="@+id/txtBali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Bali "
                android:textColor="#008C96"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/txtPopularDestination"
                app:layout_constraintTop_toBottomOf="@id/recyclerPopularDestination" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerBali"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txtBali"
                app:layout_constraintTop_toBottomOf="@id/txtBali"
                tools:listitem="@layout/item_bali_destinasi" />

            <TextView
                android:id="@+id/txtDIY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Daerah Istimewa Yogyakarta"
                android:textColor="#008C96"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/txtBali"
                app:layout_constraintTop_toBottomOf="@id/recyclerBali" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDIY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="@id/txtDIY"
                app:layout_constraintTop_toBottomOf="@id/txtDIY"
                tools:listitem="@layout/item_destinasi" />

            <TextView
                android:id="@+id/txtJawaTimur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Jawa Timur"
                android:textColor="#008C96"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/txtBali"
                app:layout_constraintTop_toBottomOf="@id/recyclerDIY" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerJawaTimur"
                android:layout_width="0dp"
                android:layout_height="158dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txtDIY"
                app:layout_constraintTop_toBottomOf="@id/txtJawaTimur" />

            <TextView
                android:id="@+id/txtJawaBarat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Jawa Barat"
                android:textColor="#008C96"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/txtBali"
                app:layout_constraintTop_toBottomOf="@id/recyclerJawaTimur" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerJawaBarat"
                android:layout_width="0dp"
                android:layout_height="158dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txtDIY"
                app:layout_constraintTop_toBottomOf="@id/txtJawaBarat" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>