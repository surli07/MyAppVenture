<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.navigation.ui.home.HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardImage"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_homepage2">

            <TextView
                android:id="@+id/mulaiPetualangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Mulai Petualanganmu Sakarang!"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtSelamatDatang"
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Selamat Datang di My Appventure, Platform online bagi seluruh komunitas pecinta alam di Indonesia."
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mulaiPetualangan" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSearch"
                android:layout_width="320dp"
                android:layout_height="22dp"
                android:layout_marginTop="11dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtSelamatDatang">

                <ImageView
                    android:id="@+id/imgSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_search" />

                <EditText
                    android:id="@+id/edtSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="12dp"
                    android:background="@null"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Cari komunitas dan pengguna lainnya"
                    android:importantForAutofill="no"
                    android:inputType="none"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerKategori"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardSearch"
                tools:listitem="@layout/item_kategori" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardImage">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtPopularDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Popular Destination For You "
                android:textColor="#008C96"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPopularDestination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txtPopularDestination"
                app:layout_constraintTop_toBottomOf="@id/txtPopularDestination"
                tools:listitem="@layout/item_destinasi" />

            <TextView
                android:id="@+id/txtBali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Bali "
                android:textColor="#008C96"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/txtPopularDestination"
                app:layout_constraintTop_toBottomOf="@id/recyclerPopularDestination" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerBali"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_bali_destinasi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txtBali"
                app:layout_constraintTop_toBottomOf="@id/txtBali" />

            <TextView
                android:id="@+id/txtDIY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Daerah Istimewa Yogyakarta"
                android:textColor="#008C96"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/txtBali"
                app:layout_constraintTop_toBottomOf="@id/recyclerBali" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDIY"
                android:layout_width="0dp"
                android:layout_height="158dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txtDIY"
                app:layout_constraintTop_toBottomOf="@id/txtDIY" />

            <TextView
                android:id="@+id/txtJawaTimur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Jawa Timur"
                android:textColor="#008C96"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/txtBali"
                app:layout_constraintTop_toBottomOf="@id/recyclerDIY" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerJawaTimur"
                android:layout_width="0dp"
                android:layout_height="158dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txtDIY"
                app:layout_constraintTop_toBottomOf="@id/txtJawaTimur" />

            <TextView
                android:id="@+id/txtJawaBarat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Jawa Barat"
                android:textColor="#008C96"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/txtBali"
                app:layout_constraintTop_toBottomOf="@id/recyclerJawaTimur" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerJawaBarat"
                android:layout_width="0dp"
                android:layout_height="158dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txtDIY"
                app:layout_constraintTop_toBottomOf="@id/txtJawaBarat" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>