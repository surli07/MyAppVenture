<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgPengikut"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNamaPengikut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="rayhan"
        android:textColor="#3D3D3D"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/imgPengikut"
        app:layout_constraintTop_toTopOf="@id/imgPengikut" />

    <ImageView
        android:id="@+id/imgLencana"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_lencana"
        app:layout_constraintStart_toStartOf="@id/txtNamaPengikut"
        app:layout_constraintTop_toBottomOf="@id/txtNamaPengikut" />

    <TextView
        android:id="@+id/txtTantangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="10 Tantangan diselesaikan"
        android:textColor="#DD9120"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/imgLencana"
        app:layout_constraintTop_toTopOf="@id/imgLencana" />

    <Button
        android:id="@+id/btnIkuti"
        android:layout_width="82dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#457275"
        android:fontFamily="@font/poppins_regular"
        android:text="Ikuti"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMengikuti"
        android:layout_width="82dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_regular"
        android:text="Mengikuti"
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:textSize="8sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>