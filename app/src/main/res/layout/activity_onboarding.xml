<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wwallpaper_onboarding"
    tools:context=".ui.OnboardingActivity">

    <TextView
        android:id="@+id/txtKeluar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:fontFamily="@font/montserrat_extrabold"
        android:layout_marginStart="17dp"
        android:text="KELUAR DARI"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtZona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="ZONA"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txtKeluar"
        app:layout_constraintStart_toStartOf="@id/txtKeluar" />

    <TextView
        android:id="@+id/txtNyaman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="NYAMAN."
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txtZona"
        app:layout_constraintStart_toStartOf="@id/txtZona" />

    <TextView
        android:id="@+id/txtBergabung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="BERGABUNG"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_extrabold"
        app:layout_constraintTop_toBottomOf="@id/txtNyaman"
        app:layout_constraintStart_toStartOf="@id/txtNyaman" />

    <TextView
        android:id="@+id/txtKedalam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:text="KE DALAM"
        android:fontFamily="@font/montserrat_extrabold"
        app:layout_constraintTop_toBottomOf="@id/txtBergabung"
        app:layout_constraintStart_toStartOf="@id/txtBergabung" />

    <TextView
        android:id="@+id/txtKomunitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="KOMUNITAS"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_extrabold"
        app:layout_constraintTop_toBottomOf="@id/txtKedalam"
        app:layout_constraintStart_toStartOf="@id/txtKedalam" />

    <TextView
        android:id="@+id/txtPecinta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:text="PECINTA"
        android:fontFamily="@font/montserrat_extrabold"
        app:layout_constraintTop_toBottomOf="@id/txtKomunitas"
        app:layout_constraintStart_toStartOf="@id/txtKomunitas" />

    <TextView
        android:id="@+id/txtAlam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="ALAM"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_extrabold"
        app:layout_constraintTop_toBottomOf="@id/txtPecinta"
        app:layout_constraintStart_toStartOf="@id/txtPecinta" />

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="78dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtAlam"
        app:layout_constraintStart_toStartOf="@id/txtAlam">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mulai Sekarang"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="9dp"
            android:layout_marginStart="23dp"
            android:textColor="@color/green"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next"
            android:layout_marginStart="292dp"
            android:layout_marginTop="14dp"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>