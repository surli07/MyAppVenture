<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="16dp">
        <ImageView
            android:id="@+id/imgFoto1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:scaleType="center"
            android:src="@drawable/ic_person" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nama"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="14sp"
        android:textColor="#3D3D3D"
        android:layout_marginTop="9dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardImage"/>

    <TextView
        android:id="@+id/txtKomentar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#3D3D3D"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtNama" />
    <TextView
        android:id="@+id/txtWaktuPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 menit lalu"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12sp"
        android:textColor="@color/accent"
        app:layout_constraintStart_toStartOf="@id/txtKomentar"
        app:layout_constraintTop_toBottomOf="@id/txtKomentar"/>

</androidx.constraintlayout.widget.ConstraintLayout>